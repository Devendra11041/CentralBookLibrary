<mvc:View
    controllerName="com.app.booklibrary.controller.Admin"
    xmlns:layout="sap.ui.layout"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns:f="sap.f"
    xmlns="sap.m"
>
    <f:DynamicPage
        id="idBooks"
        headerExpanded="true"
    >
        <f:title>
            <f:DynamicPageTitle id="_IDGenDynamicPageTitle1">
                <f:heading>
                    <Title
                        id="_IDGenTitle1"
                        text="Central Library System"
                    />
                </f:heading>
                <f:expandedContent>
                    <Label
                        id="Idsubheadins"
                        text="Admin Dashboard"
                    />
                </f:expandedContent>
                <f:navigationActions>
                    <Button
                        id="idBtnFullScreen"
                        icon="sap-icon://full-screen"
                        type="Transparent"
                    />
                    <Button
                        id="idBtnDecline"
                        icon="sap-icon://decline"
                        type="Transparent"
                        press="onclosepage"
                    />
                </f:navigationActions> 
            </f:DynamicPageTitle>
        </f:title>
        <f:header>
            <f:DynamicPageHeader
                id="idDynamicPageHeader"
                pinnable="true"
            >
                <HBox
                    id="idFilterHLayout"
                    alignContent="SpaceAround"
                    width="100vw"
                >
                    <VBox
                        id="idTitleFilter"
                        class="sapUiSmallMarginEnd"
                    >
                        <Label
                            id="idTitleFilterLabel"
                            text="Title:"
                        />
                        <MultiInput
                            id="idTitleFilterValue"
                            showValueHelp="true"
                            showTableSuggestionValueHelp="true"
                        />
                    </VBox>
                    <VBox
                        id="idAuthorFilter"
                        class="sapUiSmallMarginEnd"
                    >
                        <Label
                            id="idAuthorFilterLabel"
                            text="Author:"
                        />
                        <MultiInput
                            id="idAuthorFilterValue"
                            showValueHelp="true"
                            showTableSuggestionValueHelp="true"
                        />
                    </VBox>
                    <VBox
                        id="idGenreFilter"
                        class="sapUiSmallMarginEnd"
                    >
                        <Label
                            id="idGenreFilterLabel"
                            text="Gerne:"
                        />
                        <MultiInput
                            id="idGenreFilterValue"
                            showValueHelp="true"
                            showTableSuggestionValueHelp="true"
                        />
                    </VBox>
                    <VBox
                        id="idISBNFilter"
                        class="sapUiSmallMarginEnd"
                    >
                        <Label
                            id="idISBNFilterLabel"
                            text="ISBN:"
                        />
                        <MultiInput
                            id="idISBNFilterValue"
                            showValueHelp="true"
                            showTableSuggestionValueHelp="true"
                        />
                    </VBox>
                    <VBox
                        id="idGoButton"
                        class="sapUiSmallMarginEnd"
                    >
                        <Label
                            id="idGoButtonLabel"
                            text=""
                        />
                        <Button
                            id="idButtongo"
                            text="Go"
                            type="Emphasized"
                            press="onGoPress"
                        />
                    </VBox>
                    <VBox
                        id="idClearFilterButton"
                        class="sapUiSmallMarginEnd"
                    >
                        <Label
                            id="idClearFilterButtonLabel"
                            text=""
                        />
                        <Button
                            id="idClearFilterButtonValue"
                            text="Clear"
                            type="Emphasized"
                            press="onClearPress"
                        />
                    </VBox>
                </HBox>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <Table
                id="idBookTable"
                mode="SingleSelectMaster"
                alternateRowColors="true"
                items="{/Book}"
                
            >
                <headerToolbar>
                    <OverflowToolbar id="idBookTableHeader">
                        <Title
                            id="idTableHeaderTitle"
                            text="Books"
                        />
                        <ToolbarSpacer id="idTableHeaderSpacer" />
                        <Button
                            id="idBtnCreate"
                            icon="sap-icon://add"
                            tooltip="Create Book"
                            type="Success"
                            press="onCreateBtnPress"
                        />

                        <Button
                            id="idBtnDelete"
                            icon="sap-icon://delete"
                            tooltip="Delete Book"
                            type="Negative"
                            press="onDeleteButtonPress"
                        />
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                    <Column id="idbookId">
                        <Title
                            id="idTextColbookId"
                            text="Book Id"
                        />
                    </Column>
                    <Column id="idNameCol">
                        <Title
                            id="idTextColTitle"
                            text="ISBN"
                        />
                    </Column>
                    <Column id="idtitleCol">
                        <Title
                            id="idTitle"
                            text="Title"
                        />
                    </Column>
                    <Column id="idAuthorCol">
                        <Title
                            id="idAuthor"
                            text="Author"
                        />
                    </Column>
                    <Column id="idQuanCol">
                        <Title
                            id="idQuanColTitle"
                            text="Price"
                        />
                    </Column>
                    <Column id="idDesCol">
                        <Title
                            id="idDes"
                            text="Language"
                        />
                    </Column>
                    <Column id="idgenreCol">
                        <Title
                            id="idsta"
                            text="Genre "
                        />
                    </Column>
                    <Column id="idavailabilityCol">
                        <Title
                            id="idavailability"
                            text="Availability"
                        />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem
                        id="idEmployeeTableColListItem"
                        type="Navigation"
                    >
                        <cells>
                            <Text
                                id="idBookid"
                                text="{ID}"
                            />
                            <Text
                                id="idISBNColValue"
                                text="{ISBN}"
                            />
                            <Text
                                id="idtitleColValue"
                                text="{title}"
                            />
                            <Text
                                id="idAuthorColValue"
                                text="{Author}"
                            />
                            <Text
                                id="idPriceColValue"
                                text="{Price}"
                            />
                            <Text
                                id="idLangColValue"
                                text="{Language}"
                            />
                            <Text
                                id="idgenre"
                                text="{genre}"
                            />
                            <Text
                                id="idAvailability"
                                text="{availability}"
                            />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </f:content>
    </f:DynamicPage>
</mvc:View>
